    "description": "PHP tool to make web-shots using PhantomJS",
    "keywords": ["webshot","pageshot","screenshot"],
    "homepage": "http://codegyre.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Nick Palamarchuk",
            "email": "lividgreen@codegyre.com"
        },
        {
            "name": "Codegyre developers team",
            "homepage": "http://codegyre.com"
        }
    ],
    "require": {
        "php": ">=5.3.3"
    },
    "autoload": {
        "psr-0": { "Codegyre\\PhantomShot\\": "" }
    },
    "target-dir": "Codegyre/PhantomShot",
